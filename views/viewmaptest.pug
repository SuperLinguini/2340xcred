doctype html
html
  head
    meta(charset='utf-8')
    title placepicker
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    script(src='http://code.jquery.com/jquery-1.11.1.min.js')
    script(src='http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js')
    link(href='http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css', rel='stylesheet')
    link(href='http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css', rel='stylesheet')
    script(type='text/javascript', src='https://maps.googleapis.com/maps/api/js?sensor=true&libraries=places')
    script(src='../src/js/jquery.placepicker.js')
    script.
      $(document).ready(function() {
      // Basic usage
      $(".placepicker").placepicker();
      // Advanced usage
      $("#advanced-placepicker").each(function() {
      var target = this;
      var $collapse = $(this).parents('.form-group').next('.collapse');
      var $map = $collapse.find('.another-map-class');
      var placepicker = $(this).placepicker({
      map: $map.get(0),
      placeChanged: function(place) {
      console.log("place changed: ", place.formatted_address, this.getLocation());
      }
      }).data('placepicker');
      });
      }); // END document.ready
    style.
      .placepicker-map {
      width: 100%;
      height: 300px;
      }
      .another-map-class {
      width: 100%;
      height: 300px;
      }
      .pac-container {
      border-radius: 5px;
      }
  body
    header#overview.subhead
      .container
        h1 jquery-placepicker
        p.lead A simple placepicker component for the google-maps api.
      h1 Enter a location
        .col-md-6
          .form-group
            input.placepicker.form-control(placeholder='Enter a location')
      h3 Set value by location coordinates
      .row(data-example='')
        .col-md-6
          .form-group
            input.placepicker.form-control(data-latitude='53.538764', data-longitude='10.028240')
      h3 Use hidden inputs for submitting location coordinates
      .row(data-example='')
        .col-md-6
          form
            .form-group
              input.placepicker.form-control(placeholder='Enter a location', data-latitude-input='#latitude', data-longitude-input='#longitude')
              |  
              input#latitude(type='hidden', name='latitude', value='53.538764')
              |  
              input#longitude(type='hidden', name='longitude', value='10.028240')
            |  
            button.btn.btn-default(type='submit') Submit
      h3 Integrating a map view
      .row(data-example='')
        .col-md-6
          form
            .form-group
              input.placepicker.form-control(data-map-container-id='collapseOne')
            #collapseOne.collapse
              .placepicker-map.thumbnail
            |  
            button.btn.btn-default(type='submit') Submit
      h1 Advanced usage
      h3 Custom map CSS class and JavaScript callback
      .row(data-example='')
        .col-md-6
          form
            .form-group
              input#advanced-placepicker.form-control(data-map-container-id='collapseTwo')
            #collapseTwo.collapse
              .another-map-class.thumbnail
            |  
            button.btn.btn-default(type='submit') Submit
